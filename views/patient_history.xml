<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_history_tree" model="ir.ui.view">
        <field name="name">hospital.patient.history.tree</field>
        <field name="model">hospital.patient.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_history_form" model="ir.ui.view">
        <field name="name">hospital.patient.history.form</field>
        <field name="model">hospital.patient.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="date"/>
                    </group>
                    <notebook>
                        <page string='Medicine'>
                            <field name="medicine_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="mg_ml"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                        </group>
                                        <group>
                                            <field name="mg_ml"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>            
                </sheet>
            </form>
        </field>
    </record>

</odoo>