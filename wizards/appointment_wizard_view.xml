<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_wizard_form" model="ir.ui.view">
        <field name="name">hospital.appointment.wizard.wizard.form</field>
        <field name="model">hospital.appointment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h4>Please enter appointment code.</h4>
                    </div>
                    <group>
                        <group>
                            <field name="appointment_id" options="{'no_create': True, 'no_create_edit': True, 'no_create_delete': True}"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_view_history" string="View Patient History" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>